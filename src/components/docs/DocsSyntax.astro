---
interface Props {
    syntax: string[];
}

const { syntax }: Props = Astro.props;
---

<script>
    // Update position of filters to be below the nav bar,
    // since filters is sticky this cant be done directly
    document.getElementById("syntax")!!.style.top = `${document.getElementById("nav")!!.offsetHeight}px`;
</script>

<div id="syntax" class="sticky left-0 top-30 w-64 h-full p-0 lg:p-4
            hidden lg:flex flex-col gap-2 shrink-0
            border-r-2 border-l-border dark:border-d-border">
    <h2>Syntax</h2>
    
    {syntax.map(x => 
        <section>
            <button class="w-full text-left p-2 rounded-md bg-l-bg-secondary dark:bg-d-bg-secondary hover:cursor-pointer">
                {x}
            </button>
        </section>
    )}
</div>
