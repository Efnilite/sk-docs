---
interface Props {
    syntax: string[];
}

const { syntax }: Props = Astro.props;
---

<div class="w-0 lg:w-64 h-0 lg:h-full p-0 lg:p-4
            hidden lg:flex flex-col gap-2 
            border-r-2 border-l-border dark:border-d-border
            overflow-y-scroll">
    <h2>Syntax</h2>
    
    {syntax.map(x => 
        <button class="text-left p-2 rounded-md bg-l-bg-secondary dark:bg-d-bg-secondary hover:cursor-pointer">
            {x}
        </button>
    )}
</div>
