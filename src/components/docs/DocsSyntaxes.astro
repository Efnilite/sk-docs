---
import type { Documentation } from './Doc.astro';
import DocsSyntax from './DocsSyntax.astro';

interface Props {
    docTypes: Documentation[];
}

const { docTypes }: Props = Astro.props;
---

<script>
    // Update position of filters to be below the nav bar,
    // since filters is sticky this cant be done directly
    document.getElementById("syntax")!!.style.top = `${document.getElementById("nav")!!.offsetHeight}px`;
</script>

<div id="syntax" class="sticky left-0 top-30 w-64 h-[87vh] p-0 lg:p-4
            hidden lg:flex flex-col gap-2 shrink-0
            border-r-2 border-l-border dark:border-d-border overflow-y-auto">
    <h2>Syntax</h2>
    
    {docTypes.map(docType => <DocsSyntax docType={docType}/>)}
</div>
